<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%= content_tag :div, id: "flash_#{name}", class: "alert alert-#{name.to_s == 'notice' ? 'success' : 'danger'}" do %>
      <%= msg %>
      <button aria-hidden="true" class="btn-close" data-dismiss="alert" type="button"></button>
    <% end %>
  <% end %>
<% end %>
