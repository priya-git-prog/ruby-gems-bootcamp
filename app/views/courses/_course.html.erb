<div class="col-sm-4 mb-2">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-graduation-cap"></i>
      <%= link_to course.title, course_path(course) %>
    </div>
    <div class="card-body">
      <small><%= simple_format(course.short_description) %></small>
    </div>
    <div class="card-footer">
      <div class="text-center">
        <%= number_to_currency(course.price, unit: "â‚¹") %>
      </div>
    </div>
     <div class="card-footer">
      <div class="fa fa-book">
        <%= course.lessons.count %>
      </div>
    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col-md-6">
          <i class="fa fa-language"></i>
          <%= course.language %>
        </div>
        <div class="col-md-6">
          <div class="text-right">
            <i class="fa fa-signal"></i>
            <%= course.level %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col-md-6">
          <i class="fa fa-clock"></i>
          <%= course.created_at.strftime('%d-%b-%Y') %>
        </div>
        <div class="col-md-6">
          <div class="text-right">
            <i class="fa fa-chalkboard-teacher"></i>
            <%= course.user.username %>
          </div>
        </div>
      </div>
    </div>
    <% if current_user %>
      <% if policy(course).edit? %>
        <div class="card-footer">
          <%#= link_to 'Show', course, class: 'btn btn-sm btn-primary' %>
          <!-- if policy(course).edit? -->
          <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' %>
          <!-- if policy(course).destroy? -->
          <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
